#include <stdio.h>
#include <stdlib.h>

 void BubbleSort(float vetor[], int tamanho){
	int aux, i, j;
	for(j=tamanho-1; j>=1; j--){
		for(i=0; i<j; i++){
			if(vetor[i]>vetor[i+1]){
				aux=vetor[i];
                    vetor[i]=vetor[i+1];
                    vetor[i+1]=aux;
            }
        }
    }
}

int main(void) {
  float *x;
  int i, n;
  printf("Digite o numero de valores desejados: ");
  scanf("%d", &n);

  x = malloc(n*sizeof(float));
  printf("Digite os valores: \n");
  for(i=0;i<n;i++){
    scanf("%f", &x[i]);
  }
  printf("Vetor x criado: \n");
 for(i=0;i<n;i++){
    printf("%f ", x[i]);
  }
  printf("\n");
  printf("Vetor x em ordem crescente: \n");

  BubbleSort(x,n);

for(i=0;i<n;i++){
    printf("%f ", x[i]);
  }
  printf("\n");

free(x);
  return 0;
}
